@page
@model NewReservationModel
@{
    ViewData["Title"] = "Resturaunt Manage";
    Layout = "_LayoutForRestaurant";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Restaurant Manage</h1>
</div>

<form action="action_page.php" style="border:1px solid #ccc" name="reservationForm">
    <label for="reservationName"><b>Name:</b></label>
    <input type="text" placeholder="Enter Name" name="reservationName" required>
    <br>
    <label for="reservationDateTime"><b>Date & Time:</b></label>
    <input type="datetime-local" name="reservationDateTime" required>
    <br>
    <label for="reservationPartySize"><b>Party Size:</b></label>
    <input type="number" value="1" min="1" placeholder="Enter Size of Party" name="reservationPartySize" required>
    <br>
    <div class="clearfix">
        <button type="reset" class="cancelbtn">Cancel</button>
        <button type="submit" class="signupbtn">Submit</button>
    </div>
</form>

    
