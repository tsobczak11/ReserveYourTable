@page
@model RestUpdateModel
@{
    ViewData["Title"] = "Resturaunt Update";
    Layout = "_LayoutForRestaurant";
}

<style>
    .updateContact{
    background-color: #4CAF50;
    font-size: 24px;
    height:300px;
    width:500px;
    transition-duration: 0.4s;
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }
    .updateMenu{
    background-color: #FFFF00;
    font-size: 24px;
    height:300px;
    width:500px;
    transition-duration: 0.4s;
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    position:relative; top:18px;
    }
    .seatingPage{
    background-color: #0000FF;
    font-size: 24px;
    height:300px;
    width:500px;
    transition-duration: 0.4s;
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }
    .accountSetPage{
    background-color: #FFA500;
    font-size: 24px;
    height:300px;
    width:500px;
    transition-duration: 0.4s;
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }
    .updateContact:hover, .updateMenu:hover, .seatingPage:hover, .accountSetPage:hover {
    background-color: #D3D3D3;
    color: black;
    box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
    }
</style>

<div class="text-center">
    <h1 class="display-4">Update Information</h1>
    <p>Please select an option to update</p>
</div>

<div class="text-center">
    <a href="/UpdateContact">
        <button type="button" class="updateContact">CONTACT <br>INFORMATION</button>
    </a>
    <a href="/UpdateMenu">
        <button type="button" class="updateMenu">MENU</button>
    </a>
    
</div>

<div class="text-center">
    <a href="/UpdateSeating">
        <button type="button" class="seatingPage">SEATING</button>
    </a>
    <a href="/UpdateAccountSet">
        <button type="button" class="accountSetPage">ACCOUNT SETTINGS</button>
    </a>
</div>

