@page
@model RestManageModel
@{
    ViewData["Title"] = "Resturaunt Manage";
    Layout = "_LayoutForRestaurant";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Restaurant Manage</h1>
</div>

<style>
    .updateReservation {
        background-color: #4CAF50;
        font-size: 24px;
        height: 300px;
        width: 500px;
        transition-duration: 0.4s;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    .newReservation {
        background-color: #FFFF00;
        font-size: 24px;
        height: 300px;
        width: 500px;
        transition-duration: 0.4s;
        box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2), 0 6px 20px 0 rgba(0,0,0,0.19);
    }

    .updateReservation:hover, .newReservation:hover {
        background-color: #D3D3D3;
        color: black;
        box-shadow: 0 12px 16px 0 rgba(0,0,0,0.24), 0 17px 50px 0 rgba(0,0,0,0.19);
    }
</style>

<div class="" text-center"">
    <button type="button" class="updateReservation" onclick="window.location.href='/UpdateReservation'">Update<br>Reservation</button>
    <button type="button" class="newReservation" onclick="window.location.href='/NewReservation'">New<br>Reservation</button>
</div>
